# PKI 服务器配置示例
# 复制此文件为 .env 并修改配置

# CA 路径（根据实际部署位置修改）
CA_CERT_PATH=/path/to/intermediate_ca.crt
CA_KEY_PATH=/path/to/intermediate_ca_key
CA_CHAIN_PATH=/path/to/ca_chain.crt

# CA 密钥密码（⚠️ 请使用强密码）
CA_KEY_PASSWORD=your-ca-key-password

# 服务器配置
HOST=0.0.0.0
PORT=57443

# 签发策略
DEFAULT_VALIDITY_DAYS=365
AUTO_SIGN_ENABLED=false

# 数据库路径
DATABASE_PATH=./pki.db

# 管理员密码（⚠️ 首次启动后请修改）
ADMIN_PASSWORD=change-me-immediately

# 日志级别
LOG_LEVEL=INFO

# 是否要求设备 Token
REQUIRE_DEVICE_TOKEN=false
